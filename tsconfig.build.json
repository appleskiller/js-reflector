{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "alwaysStrict": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "compileOnSave": false
}